rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read avatar images
    match /avatars/{botId}/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload) for authenticated users
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Allow read access to base/starter avatars folder (public read for all authenticated users)
    match /avatars/base/{avatarType}/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload) for authenticated users (admin only in practice)
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

