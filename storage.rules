rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }
    
    // Helper function to check if user owns the bot
    function isBotOwner(botId) {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/bots/$(botId)) &&
             firestore.get(/databases/(default)/documents/bots/$(botId)).data.ownerId == request.auth.uid;
    }
    
    // Allow authenticated users to upload and read avatar images
    match /avatars/{botId}/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload) only for bot owners or admins
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*')
                    && (isBotOwner(botId) || isAdmin());
    }
    
    // Allow read access to base/starter avatars folder (public read for all authenticated users)
    match /avatars/base/{avatarType}/{fileName} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload) only for admins/superadmins
      allow write: if request.auth != null
                    && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                    && request.resource.contentType.matches('image/.*')
                    && isAdmin();
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

